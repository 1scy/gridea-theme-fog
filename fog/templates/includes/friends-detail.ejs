<style>
    #friendscontainer {
        position: flex;
    }

    .friend-box {
        margin-top: 20px;
        margin-bottom: 20px;
        margin-left: 20px;
        float: left;
        width: 40%;
        height: 150px;
        border-radius: 10px;
        background: antiquewhite;
    }

    .friend-box img {
        height: 150px;
        width: 150px;
        border-radius: 10px;
        overflow: hidden;
        float: left;
        overflow: hidden;
    }

    .friend-box .title {
        margin-top: 10px;
        font-size: 30px;
        font-weight: 900;
        color: black;
        text-decoration: none;
    }

    .flink-info {
        padding-left: 10px;
        padding-right: 10px;
        float: left;
        width: 50%;
        overflow-x: hidden;
    }

    @media screen and (max-width: 1300px) {
        .friend-box {
            background: black;
            width: 100%;
            height: 100px;
            margin-top: 10px;
            margin-bottom: 10px;
            margin-left: 0;
        }

        .friend-box img {
            height: 100px;
            width: 100px;
        }

        .flink-info {
            padding: 5px;
            color: white;
            overflow-y: scroll;
            overflow-x: hidden;
        }

        .friend-box .title {
            color: white;
            font-size: 24px;
            font-weight: 600;
        }
    }
</style>

<body>
    <div id="friendscontainer">
        <% if (site.customConfig.friendschoice) { %>
        <% site.customConfig.friends.forEach(function(friend) { %>
        <div class="friend-box">
            <img class="friend-avatar" src="<%= friend.siteLogo %>">
            <div class="flink-info">
                <a href="<%= friend.siteLink %>" class="title" target="_blank"><%= friend.siteName %></a>
                <div style="margin-top:10px"></div>
                <p><%= friend.description %></p>
            </div>
        </div>
        <% }); %>
        <% } %>
    </div>
</body>